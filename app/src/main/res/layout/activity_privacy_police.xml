<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_toolbar">

    <include
        android:id="@+id/toolbarPrivasi"
        layout="@layout/toolbar_privasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_below="@+id/toolbarPrivasi"
        android:layout_width="394dp"
        android:layout_height="515dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarPrivasi">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPrivasi"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_privasi" />

            <TextView
                android:id="@+id/privasiMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/privasiMain"
                android:textColor="@color/colorMain"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/titlePrivasi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Mengumpulkan Informasi Perangkat"
                android:textColor="@color/colorMain"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privasi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/privasiChild1"
                android:textColor="@color/colorMain"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/titlePrivasi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mengumpulkan Alamat Gmail"
                android:textColor="@color/colorMain"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privasi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/privasiChild2"
                android:textColor="@color/colorMain"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/titlePrivasi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Memerlukan Informasi Lokasi"
                android:textColor="@color/colorMain"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privasi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/privasiChild3"
                android:textColor="@color/colorMain"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/titlePrivasi4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Memerlukan Akses Penyimpanan"
                android:textColor="@color/colorMain"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privasi4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/privasiChild4"
                android:textColor="@color/colorMain"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/titlePrivasi5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Informasi Keamanan"
                android:textColor="@color/colorMain"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privasi5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/privasiChild5"
                android:textColor="@color/colorMain"
                android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>