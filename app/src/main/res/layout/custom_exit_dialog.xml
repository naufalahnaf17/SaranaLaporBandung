<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_post">

    <TextView
        android:id="@+id/titleExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/subtitleExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Apakah Anda yakin ingin keluar ?"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/titleExit"/>

    <RelativeLayout
        android:padding="20dp"
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleExit"
        android:gravity="center">

        <Button
            android:id="@+id/btnYa"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorMyBlue"
            android:textSize="15sp"
            android:text="Ya"/>

        <Button
            android:id="@+id/btnTidak"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/ColorRed"
            android:layout_toRightOf="@id/btnYa"
            android:textSize="15sp"
            android:text="Tidak"/>

    </RelativeLayout>

</RelativeLayout>