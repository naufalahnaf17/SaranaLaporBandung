<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_post">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photoAccount"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@color/colorGray"/>

            <TextView
                android:id="@+id/nameAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/photoAccount"
                android:fontFamily="sans-serif"
                android:text="Aip Ariyadi"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameAccount"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/photoAccount"
                tools:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/locatePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameAccount"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/ivLocation"
                android:fontFamily="sans-serif"
                android:text="Jl. Kopo Cirangrang"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/datePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:text="17 Mei"
                android:textSize="13sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/contentPostMe"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@id/photoAccount"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:text="Ada Jalan yang berlubang dan sampai saat ini belum juga dibenarkan. mohon untuk segera dibenarkan."
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/photoPost"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/contentPostMe"
                tools:src="@drawable/bg_gradient" />

            <ImageButton
                android:id="@+id/btnVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photoPost"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_vote_active" />

            <TextView
                android:id="@+id/detailPostMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photoPost"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text="Menunggu tanggapan "
                android:textSize="13sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_below="@id/photoPost"
                android:layout_marginTop="17dp"
                android:layout_toLeftOf="@id/detailPostMe"
                android:src="@drawable/red_feed" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>